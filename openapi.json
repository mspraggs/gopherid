{
  "openapi": "3.0.0",
  "info": {
    "title": "GopherID Provider",
    "description": "OIDC-like identity provider.",
    "version": "1.0.0"
  },
  "paths": {
    "/api/login": {
      "post": {
        "summary": "Login",
        "description": "Authenticate using username and password.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string", "example": "guest" },
                  "password": { "type": "string", "example": "password123" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Returns RS256 JWT" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden (Admin login not allowed)" }
        }
      }
    },
    "/.well-known/jwks.json": {
      "get": {
        "summary": "Get JSON Web Key Set",
        "responses": { "200": { "description": "Returns public keys" } }
      }
    },
    "/api/flag": {
      "get": {
        "summary": "Get Flag",
        "security": [ { "BearerAuth": [] } ],
        "responses": { 
          "200": { "description": "The Flag" },
          "403": { "description": "Forbidden" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" }
    }
  }
}
